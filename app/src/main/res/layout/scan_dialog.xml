<!--?xml version=1.0 encoding=utf-8?-->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/scan_bg" 
    android:gravity="center_horizontal" 
    android:layout_gravity="center" 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:orientation="vertical" 
    android:layout_marginTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="30dp" 
    android:paddingRight="30dp">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="150dip">
        <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:textSize="16sp"
            android:text="新版本更新"/>
        <TextView 
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="马上进行版本更新"
            android:textColor="@color/title_bar_tv_color"
            android:layout_marginLeft="10dip"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/title_bottom_line_color"/>
            <Button 
                android:id="@+id/comfire_btn"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="更新"
                android:layout_centerVertical="true"
                android:background="@drawable/register_comfire_btn_selector_bg"/>
            <Button 
                android:id="@+id/concel_btn"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:text="暂不更新"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/title_bar_tv_color"
                android:background="@drawable/zc_selector_bg"/>
        </RelativeLayout>
    </RelativeLayout>
    
</LinearLayout>