<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color">
    	<include
    	     android:id="@+id/title"
    	     layout="@layout/common_title_right_txt"/>
    	<com.example.view.commonview.UpDownScrollView 
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_below="@id/title">
    	<RelativeLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent">
    	    <RelativeLayout 
	    android:id="@+id/zf_rl"
	    android:layout_width="match_parent"
	    android:layout_height="60dip">
	    <ImageView 
	        android:id="@+id/g"
	        android:layout_width="35dip"
	        android:layout_height="35dip"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dip"
	        android:background="@drawable/scan_success"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:textColor="#1BB947"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/g"
	        android:layout_marginLeft="10dip"
	        android:text="支付成功"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_below="@id/zf_rl"
	    android:background="@color/white">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="15dip"
	        android:textSize="18sp"
	        android:textColor="#000000"
	        android:text="门店消费"/>
	    <TextView 
	        android:id="@+id/price_tv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="15dip"
	        android:textSize="30sp"
	        android:textColor="#000000"
	        android:text="￥11.20"/>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:layout_marginTop="30dip"
	        android:background="@color/app_divider_color"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#AAA7A2"
	            android:textSize="15sp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="20dip"
	            android:text="门店名称"/>
	        <TextView 
	            android:id="@+id/md_address"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:textColor="#AAA7A2"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dip"
	            android:text="董家湾北街店"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#AAA7A2"
	            android:textSize="15sp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="20dip"
	            android:text="交易时间"/>
	        <TextView 
	            android:id="@+id/xf_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:textColor="#AAA7A2"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dip"
	            android:text="2016.11.03 9:20"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#AAA7A2"
	            android:textSize="15sp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="20dip"
	            android:text="支付方式"/>
	        <TextView 
	            android:id="@+id/pay_type"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:textColor="#AAA7A2"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dip"
	            android:text="余额支付"/>
	    </RelativeLayout>
	    
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#AAA7A2"
	            android:textSize="15sp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="20dip"
	            android:text="优惠方式"/>
	        <TextView 
	            android:id="@+id/hd_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:textColor="#AAA7A2"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dip"
	            android:text="无"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#AAA7A2"
	            android:textSize="15sp"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="20dip"
	            android:text="备注信息"/>
	        <TextView 
	            android:id="@+id/detail"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:textColor="#AAA7A2"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dip"
	            android:text="无"/>
	    </RelativeLayout>
	</LinearLayout>
	   </RelativeLayout>
   </com.example.view.commonview.UpDownScrollView>
   <TextView 
	    android:id="@+id/copyright"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:textColor="#AAA7A2"
	    android:layout_marginBottom="5dip"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:text="Copyright © 2016 玖零壹零.All Rights Reserved"/>
   
   	<ImageView 
   	    android:id="@+id/hb_btn"
   	    android:layout_width="50dp"
   	    android:layout_height="50dp"
   	    android:layout_alignParentBottom="true"
   	    android:layout_alignParentRight="true"
   	    android:layout_marginRight="20dp"
   	    android:layout_marginBottom="20dp"
   	    android:background="@drawable/sjhb"/>
   
</RelativeLayout>
