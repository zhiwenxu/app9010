<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background_color">
    <include layout="@layout/common_title_right_txt"/>
	<RelativeLayout 
        	android:layout_width="match_parent"
        	android:layout_height="50dip"
        	android:background="@color/white"
        	android:layout_marginTop="20dip">

        	<TextView
        	    android:id="@+id/text"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_centerVertical="true"
        	    android:layout_marginLeft="10dip"
        	    android:text="密码"
        	    android:textColor="@color/title_bar_tv_color"
        	    android:textSize="14sp" />

        	<EditText
        	    android:id="@+id/pwd_edit1"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_toRightOf="@id/text"
        	    android:background="@color/white"
        	    android:hint="请输入新密码"
        	    android:password="true"
        	    android:paddingLeft="10dip"
        	    android:singleLine="true"
        	    android:textSize="13sp" />

    	</RelativeLayout>
    	<View 
    	    android:layout_width="match_parent"
    	    android:layout_height="1px"
    	    android:background="@color/app_divider_color"/>
    	<RelativeLayout 
        	android:layout_width="match_parent"
        	android:layout_height="50dip"
        	android:background="@color/white">

        	<TextView
        	    android:id="@+id/text1"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_centerVertical="true"
        	    android:layout_marginLeft="10dip"
        	    android:text="确认密码"
        	    android:textColor="@color/title_bar_tv_color"
        	    android:textSize="14sp" />

        	<EditText
        	    android:id="@+id/pwd_edit2"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_toRightOf="@id/text1"
        	    android:background="@color/white"
        	    android:hint="请输入确认密码"
        	    android:paddingLeft="10dip"
        	    android:password="true"
        	    android:singleLine="true"
        	    android:textSize="13sp" />
    	</RelativeLayout>
    	<Button 
	    		android:id="@+id/comfire_btn"
	    		android:layout_width="match_parent"
	    		android:layout_height="45dip"
	    		android:layout_marginLeft="15dip"
	    		android:layout_marginRight="15dip"
	    		android:layout_marginTop="20dip"
	    		android:text="确定修改密码"
	    		android:textColor="@color/white"
	    		android:background="@drawable/login_btn_selector_bg"/>
    	
</LinearLayout>
