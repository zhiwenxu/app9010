<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@drawable/bj1">
        <ImageView 
            android:id="@+id/icon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="@drawable/tx"/>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:layout_alignTop="@id/icon"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="徐熙悌"/>
            <ImageView 
                android:layout_width="12dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/name"
                android:layout_marginLeft="10dip"
                android:background="@drawable/t1"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:layout_alignBottom="@id/icon"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/huiyuan_icon"
                android:layout_width="12dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:background="@drawable/t1"/>
            <TextView 
                android:id="@+id/huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/huiyuan_icon"
                android:layout_centerVertical="true"
                android:text="会员卡号  35060311111111"/>
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/sy_selector_bar"/>
</LinearLayout>
