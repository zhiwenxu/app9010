<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/app_background_color">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="@drawable/bj1">
        <com.example.view.commonview.CircleImageView  
            android:id="@+id/icon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            app:border_width="0dp"
      		app:border_color="@color/white"
            android:src="@drawable/tx"/>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:layout_alignTop="@id/icon"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/sy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:text="徐熙悌"/>
            <ImageView 
                android:layout_width="12dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/sy_name"
                android:layout_marginLeft="10dip"
                android:background="@drawable/t1"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:layout_alignBottom="@id/icon"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/huiyuan_icon"
                android:layout_width="17dip"
                android:layout_height="11dip"
                android:layout_centerVertical="true"
                android:background="@drawable/t4"/>
            <TextView 
                android:id="@+id/sy_huiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/huiyuan_icon"
                android:layout_centerVertical="true"
                android:text="会员卡号  35060311111111"/>
        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/sy_selector_bar"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent" >
        
    </android.support.v4.view.ViewPager> 
</LinearLayout>
