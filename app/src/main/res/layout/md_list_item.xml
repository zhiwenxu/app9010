<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="100dip">
        <ImageView 
            android:id="@+id/md_icon"
            android:layout_width="80dip"
            android:layout_height="65dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"/>
        <TextView 
            android:id="@+id/md_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3a3a3a"
            android:textSize="16sp"
            android:layout_alignTop="@id/md_icon"
            android:layout_marginTop="3dip"
            android:layout_toRightOf="@id/md_icon"
            android:layout_marginLeft="5dip"
            android:text="9010便利店"/>
        
        
           <com.example.view.commonview.StarBar 
               	android:id="@+id/md_starBar"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		ratingbar:starEmpty="@drawable/star3"
        		ratingbar:starFill="@drawable/star1"
        		android:layout_centerVertical="true"
        		android:layout_marginLeft="5dip"
        		android:layout_toRightOf="@id/md_icon"
        		ratingbar:starDistance="5dp"
        		android:clickable="false"
        		ratingbar:starCount="5"
        		ratingbar:starSize="15dp"/>
        <TextView 
            android:id="@+id/md_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a0a0a0"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_alignBottom="@id/md_icon"
            android:layout_marginBottom="3dip"
            android:text="350米"/>
        <TextView 
            android:id="@+id/md_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a0a0a0"
            android:textSize="13sp"
            android:layout_toRightOf="@id/md_icon"
            android:layout_marginLeft="5dip"
            android:layout_toLeftOf="@id/md_distance"
            android:layout_marginRight="5dip"
            android:layout_below="@id/md_starBar"
            android:layout_marginTop="3dip"
            android:text="渝北区人心路北侧"/>
        <TextView 
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a0a0a0"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:visibility="invisible"
            android:text="人访问"/>
        
        <TextView 
            android:id="@+id/md_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e13a31"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/people"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:text="26"/>
        
    </RelativeLayout>

</LinearLayout>
