<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include 
        android:id="@+id/title"
        layout="@layout/common_title_right_image"/>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginBottom="47dp">
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@drawable/xdhk"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/sys_btn"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:background="@drawable/bottom_bar_scan_selector_bg"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/sys_btn"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/sy_btn"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/sy_img"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:background="@drawable/syax"
                    android:layout_marginTop="4dip"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/sy_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="首页"
                    android:textColor="@color/bottom_bar_tv_color_gray"
                    android:layout_marginTop="2dip"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/fx_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="15dip">
                    <ImageView
                        android:id="@+id/fx_img"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/fx"
                        android:layout_marginTop="4dip"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/fx_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="发现"
                        android:textColor="@color/bottom_bar_tv_color_gray"
                        android:layout_marginTop="2dip"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/sys_btn">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/md_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dip">
                    <ImageView
                        android:id="@+id/md_img"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/md"
                        android:layout_marginTop="4dip"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/md_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="门店"
                        android:textColor="@color/bottom_bar_tv_color_gray"
                        android:layout_marginTop="2dip"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/wd_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/wd_img"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/wd"
                        android:layout_marginTop="4dip"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/wd_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="我的"
                        android:textColor="@color/bottom_bar_tv_color_gray"
                        android:layout_marginTop="2dip"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
